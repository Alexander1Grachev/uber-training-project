{
  "rules": {
    // Отключает стандартное правило ESLint для отступов
    "indent": "off",
    
    // Отключает TypeScript-специфичное правило для отступов
    "@typescript-eslint/indent": "off",
    
    // Настройка точек с запятой для членов TypeScript (интерфейсы, типы и т.д.)
    "@typescript-eslint/member-delimiter-style": [
      "error",  // Уровень серьезности: ошибка
      {
        // Настройки для многострочных определений
        "multiline": {
          "delimiter": "semi",  // Требует точку с запятой ;
          "requireLast": true    // Требует точку с запятой после последнего элемента
        },
        // Настройки для однострочных определений
        "singleline": {
          "delimiter": "semi",  // Требует точку с запятой ;
          "requireLast": false   // Не требует точки с запятой после последнего элемента
        }
      }
    ]
  }
}